{
    "compilerOptions": {
      "target": "ES2020",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": "..",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "baseUrl": "..",
      "paths": {
        "@shared/*": ["shared/*"],
        "@db": ["db/index"],
        "@db/*": ["db/*"]
      }
    },
    "include": ["**/*.ts", "../shared/**/*.ts", "../db/**/*.ts", "../vite.config.ts"],
    "exclude": ["node_modules", "dist"]
  }